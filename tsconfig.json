{
    "files": [
        "index.js"
      ],
      "include": [
        "lib/**/*.js",
        "test/**/*.js"
      ],
      "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "resolveJsonModule": true,
        "declaration": true,
        "noEmit": false,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}
